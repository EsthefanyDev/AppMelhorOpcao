<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background"
    tools:context=".InicialActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:layout_marginTop="59dp"
                app:srcCompat="@drawable/ic_launcher_logo2_round" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="40dp"
                android:text="@string/intro_title"
                android:textAlignment="center"
                android:textSize="31sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intro_text"
                android:textAlignment="center"
                android:textColor="@color/red1"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vamos comeÃ§ar!"
                android:onClick="entrarHome"
                android:layout_marginTop="32dp"
                android:background="@drawable/red_bg"
                android:layout_margin="24dp"
                style="@android:style/Widget.Button"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="UseCompoundDrawables"/>

            <TextView
                android:id="@+id/entraini"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:onClick="entraini"
                android:text="@string/intro_signin"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="UseCompoundDrawables" />
            <TextView
                android:id="@+id/cadastraini"
                android:layout_width="match_parent"
                android:onClick="cadastraini"
                android:text="@string/intro_cadastre"
                android:textAlignment="center"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                tools:ignore="UseCompoundDrawables"
                />
            <ProgressBar
                android:id="@+id/barrapros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="181dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="182dp"
                android:layout_marginBottom="67dp"
                android:scaleX=".5"
                android:scaleY=".5"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearlayout">

            </ProgressBar>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>