<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    tools:context=".ui.perfil.PerfilFragment">

    <ImageView
        android:id="@+id/perfil_img"
        android:layout_width="399dp"
        android:layout_height="174dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/perfil_nome"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@mipmap/ic_launcher_user_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Seu Nome"
        android:padding="3dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil_img"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/perfil_email"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@mipmap/ic_launcher_email_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Seu Email"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil_nome"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/perfil_cpf"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@mipmap/ic_launcher_cpf_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Seu CPF"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil_email"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/perfil_endereco"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@mipmap/ic_launcher_casa_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Seu EndereÃ§o"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil_cpf"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/perfil_senha"
        android:inputType="textPassword"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@mipmap/ic_launcher_key_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Sua Senha"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil_endereco"
        app:layout_constraintWidth_percent=".8" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="175dp"
        android:layout_height="62dp"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="118dp"
        android:backgroundTint="#C60000"
        android:text="Atualizar Dados"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil_senha"
        app:layout_constraintVertical_bias="0.23" />
</androidx.constraintlayout.widget.ConstraintLayout>