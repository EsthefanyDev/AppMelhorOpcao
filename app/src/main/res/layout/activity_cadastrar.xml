<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atividades.CadastrarActivity"
    android:background="@mipmap/orange_background">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="215dp"
        android:layout_height="155dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cadastrese" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/alice"
        android:text="Novo Usuário"
        android:textAlignment="center"
        android:textColor="#F40D0D"
        android:textSize="19sp"
        android:textStyle="bold|italic"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/nomeusuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/emailusuario"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"

        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/envelope"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:fontFamily="@font/alice"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textColorHint="@color/material_dynamic_neutral_variant40"
        android:textColorLink="#2196F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/telefoneusuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeusuario"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/enderecousuario"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/marcador"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:fontFamily="@font/alice"
        android:hint="Endereço"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textColorHint="@color/material_dynamic_neutral_variant40"
        android:textColorLink="#2196F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/senhausuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefoneusuario"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/senhausuario"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@drawable/chave"
        android:drawableEnd="@drawable/olhos_cruzados"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:fontFamily="@font/alice"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textColorHint="@color/material_dynamic_neutral_variant40"
        android:textColorLink="#2196F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cadastrar_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enderecousuario"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/nomeusuario"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/user_icon"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:fontFamily="@font/alice"
        android:hint="Nome"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textColorHint="@color/material_dynamic_neutral_variant40"
        android:textColorLink="#2196F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/emailusuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/telefoneusuario"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"

        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/telefone"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:fontFamily="@font/alice"
        android:hint="Telefone"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textColorHint="@color/material_dynamic_neutral_variant40"
        android:textColorLink="#2196F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/enderecousuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailusuario"
        app:layout_constraintWidth_percent=".8" />


    <Button
        android:id="@+id/cadastrar_btn"
        android:layout_width="175dp"
        android:layout_height="62dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/red1"
        android:fontFamily="@font/alice"
        android:text="Cadastrar-se"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhausuario" />

    <TextView
        android:id="@+id/entrar"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/alice"
        android:text="Entrar"
        android:textColor="@color/red2"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.987" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="144dp"
        android:layout_height="21dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/alice"
        android:text="Já tem uma conta ?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

    <ProgressBar
        android:id="@+id/barrapros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="86dp"
        android:scaleX=".5"
        android:scaleY=".5"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cadastrar_btn"
        app:layout_constraintTop_toBottomOf="@+id/senhausuario"
        app:layout_constraintVertical_bias="0.0">

    </ProgressBar>

    <ImageView
        android:id="@+id/voltar_inicial"
        android:layout_width="45dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>