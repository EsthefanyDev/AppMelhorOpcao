<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atividades.CadastrarActivity"
    android:background="@mipmap/orange_background">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cadastrese" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/alice"
        android:text="Cadastro de Novo Usuário"
        android:textAlignment="center"
        android:textColor="#F40D0D"
        android:textSize="19sp"
        android:textStyle="bold|italic"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/nomeusuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/nomeusuario"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/ic_launcher_user_foreground"
        android:drawablePadding="5dp"
        android:elevation="3dp"
        android:hint="Nome"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/emailusuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/emailusuario"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/ic_launcher_email_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Email"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/cpfusuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeusuario"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/cpfusuario"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@mipmap/ic_launcher_cpf_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="CPF"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/enderecousuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailusuario"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/enderecousuario"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/ic_launcher_casa_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Endereço"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/senhausuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpfusuario"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/senhausuario"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@mipmap/ic_launcher_key_foreground"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/cadastrar_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enderecousuario"
        app:layout_constraintWidth_percent=".8" />


    <Button
        android:id="@+id/cadastrar_btn"
        android:layout_width="175dp"
        android:layout_height="62dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/red1"
        android:text="Cadastrar-se"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhausuario" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="144dp"
        android:layout_height="21dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="51dp"
        android:text="Já tem uma conta ?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/entrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastrar_btn" />

    <TextView
        android:id="@+id/entrar"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginEnd="108dp"
        android:text="Entrar"
        android:textColor="@color/red2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925" />

    <ProgressBar
        android:id="@+id/barrapros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="86dp"
        android:scaleX=".5"
        android:scaleY=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cadastrar_btn"
        app:layout_constraintTop_toBottomOf="@+id/senhausuario"
        app:layout_constraintVertical_bias="0.0">

    </ProgressBar>


</androidx.constraintlayout.widget.ConstraintLayout>