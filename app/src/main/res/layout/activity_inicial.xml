<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atividades.InicialActivity"
    android:background="@mipmap/orange_background">


  <ProgressBar
      android:id="@+id/barrapros"
      android:layout_width="52dp"
      android:layout_height="68dp"
      android:scaleX=".5"
      android:scaleY=".5"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearlayout"
      app:layout_constraintVertical_bias="0.6">

  </ProgressBar>

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="413dp"
      android:layout_height="282dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="17dp"
      android:importantForAccessibility="no"
      app:layout_constraintBottom_toTopOf="@+id/textView5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo2" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="412dp"
      android:layout_height="95dp"
      android:text="Seja Bem-vindo(a)! Fique a vontade para explorar uma ampla variedade de produtos"
      android:textAlignment="center"
      android:textColor="@color/red1"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/linearlayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.478"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <LinearLayout
      android:id="@+id/linearlayout"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.694">

    <LinearLayout
        android:id="@+id/entraini"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="entraini"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:importantForAccessibility="no"
          android:src="@mipmap/ic_launcher_login_foreground" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="6dp"
          android:layout_marginTop="10dp"
          android:text="ENTRAR"
          android:textColor="@color/red1"
          android:textSize="22sp"
          android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cadastraini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cadastraini"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:importantForAccessibility="no"
          android:src="@mipmap/ic_launcher_envio_foreground">

      </ImageView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="6dp"
          android:layout_marginTop="10dp"
          android:text="CADASTRAR"
          android:textColor="@color/red1"
          android:textSize="22sp"
          android:textStyle="bold" />
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/barrapros"
      app:layout_constraintVertical_bias="0.0">

  </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>